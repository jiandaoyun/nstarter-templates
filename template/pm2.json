{
    "apps": [{
        "name": "${APP_NAME}",
        "script": "./dist/app.js",
        "max_memory_restart": "1024M",
        "kill_timeout": 5000,
        "out_file": "NULL",
        "error_file": "NULL",
        "exec_mode": "cluster",
        "instances": 1,
        "node_args": "--max-old-space-size=2048",
        "env": {
            "NODE_ENV": "production",
            "TZ": "UTC"
        },
        "env_local": {
            "NODE_ENV": "local",
            "TZ": "UTC"
        }
    }]
}
