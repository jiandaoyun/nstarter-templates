{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "outDir": "dist",
        "baseUrl": "src",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "pretty": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
