{
    "apps": [{
        "name": "${APP_NAME}",
        "script": "./dist/app.js",
        "log_date_format": "MM-DD HH:mm:ss",
        "max_memory_restart": "1024M",
        "kill_timeout": 5000,
        "combine_logs": true,
        "exec_mode": "cluster",
        "instances": 1,
        "node_args": "--max-old-space-size=2048",
        "env": {
            "NODE_ENV": "production",
            "TZ": "UTC"
        },
        "env_develop": {
            "NODE_ENV": "develop",
            "TZ": "UTC"
        },
        "env_test": {
            "NODE_ENV": "test",
            "TZ": "UTC"
        }
    }]
}
